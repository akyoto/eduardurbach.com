#container
	width 100%
	height 100%
	display block
	float left
	overflow auto
	opacity 0.05

#header-container
	display block
	float left
	width 100%
	height auto
	background-color transparent

#header
	display block
	margin 0 auto
	width calc(75% + 3em)
	overflow hidden
	border-bottom-right-radius 15px
	border-bottom-left-radius 15px

#title, #tagline
	display block
	margin 0 auto
	width calc(100% - 3em)
	height auto
	text-align left

#title
	padding 1.5em
	padding-bottom 0.5em
	h1
		line-height inherit
	a
		color rgb(32, 32, 32)
		text-decoration none
		text-shadow 1px 1px 16px rgba(224, 224, 224, 0.55)

#tagline
	padding 1.5em
	padding-top 0.5em
	line-height 1.3em

#navigation
	display block
	margin 0 auto
	width calc(100% - 3em)
	height 100%
	padding 0% 1.5em
	text-align center
	header
		display none
	a
		display inline-block
		font-weight normal
		height 100%
		text-decoration none
		&:hover
			cursor pointer
			text-decoration none

.navigation-button
	padding 0.75em 1em
	font-size 1.8em
	line-height 1em
	color rgb(255, 255, 255)
	opacity 0.15
	text-transform uppercase
	letter-spacing 2px
	transition all 200ms ease
	&::first-letter
		color rgb(255, 255, 255)
		opacity 1
		font-size 1.3em
		font-weight bold
	&:hover
		color rgb(255, 255, 255) !important
		text-shadow 0 0 8px rgba(255, 255, 255, 0.9)
		opacity 1

.active
	.navigation-button
		opacity 1
		text-shadow 0 0 8px rgba(255, 255, 255, 0.5)

#content-container
	display block
	float left
	width 100%
	height auto
	background-color transparent

#content
	display block
	width 50%
	height 100%
	min-height 100%
	background-color transparent
	margin 1em auto
	img
		margin 0.5em auto
		max-width 100%
		height auto
	& > div
		float left
		width 100%
		text-align center

#footer-container
	display block
	float left
	width 100%
	height auto
	text-align center
	background-color transparent

#footer
	display block
	width 75%
	height auto
	padding 0.5em 1.5em
	margin 0 auto
	overflow hidden
	font-size 0.8em
	line-height 1.1em
	text-align center
	border-top-right-radius 15px
	border-top-left-radius 15px

#status-message
	position fixed
	bottom 2em
	left 50%
	transform translateX(-50%)
	opacity 0.2

#links
	display inline-block
	height 100%
	a
		&:hover
			text-decoration none
	img
		box-shadow none