duration = 0.8s
size = 16px

#loading-animation
	position fixed
	bottom 1.15rem
	right 1.15rem
	display flex
	flex-flow row wrap
	width size
	height size
	transform rotateZ(0deg)
	animation sk-rotate duration infinite linear
	will-change transform, opacity

.sk-cube
	flex 0 0 33.3%
	background-color alpha(loadingColor, 50%)
	box-shadow 0 0 size alpha(loadingColor, 60%)
	animation sk-scale duration infinite linear
	border-radius 100%

.sk-cube5
	background-color loadingColor
	box-shadow 0 0 size alpha(loadingColor, 90%)

.sk-cube1
.sk-cube3
.sk-cube7
.sk-cube9
	visibility hidden

@keyframes sk-rotate
	0%
		transform rotateZ(0deg)
	100%
		transform rotateZ(360deg)

@keyframes sk-scale
	0%, 100%
		transform scale3D(0.4, 0.4, 0.4)
	50%
		transform scale3D(0.9, 0.9, 0.9)