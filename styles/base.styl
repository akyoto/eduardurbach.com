html
	font-family "Julius Sans One"
	font-size baseFontSize
	height 100%

body
	tab-size 4
	text-rendering optimizeLegibility
	height 100%
	color mainColor
	background-color black
	overflow-x hidden
	overflow-y hidden
	display flex
	flex-direction column
	// background url("/images/backgrounds/pro.jpg")
	// background-size cover
	// background-position center bottom

a
	text-decoration none
	text-shadow none
	color linkColor
	transition all transitionSpeed ease

	&:hover
		color lighten(linkColor, 20%)
		text-shadow 0px 0px 8px alpha(linkColor, 30%)

header
	width 100%
	color headerColor
	a:hover
		text-shadow inherit
		&:after
			width 0 !important

li
	margin-top 1px
	margin-bottom 1px

h1, h2, h3, h4
	font-family "Julius Sans One"

p, ul, ol, h4, blockquote, table
	line-height 1.7em
	float left
	width 100%

p, ul, ol, pre, h3, blockquote
	text-align left
	margin-top 0.4em
	margin-bottom 0.4em
	float left

.full-page
	display flex
	align-items center
	justify-content center
	height 100vh - navigationHeight
	h2
		font-size 15vh
		letter-spacing 5px

h2
	font-size 2.3rem
	line-height 2.3rem
	font-weight bold
	width 100%
	letter-spacing 2px
	margin-bottom 2rem
	text-align center

h3
	font-size 2em
	line-height 1.5em
	font-weight bold
	width 100%
	letter-spacing 1px
	text-align center

h4
	line-height 1.5em
	font-size 1.5em
	font-weight bold
	text-align left
	letter-spacing 1px

small
	font-size 70%

table
	float left

tr
	border-bottom-width 1px
	border-bottom-style solid
	border-bottom-color rgba(255, 255, 255, 0.05)

	&:last-child
		border none

td
	padding 0.3em 0.5em
	text-align left
	vertical-align top

iframe
	padding 0.5em
	float left
	display block
	margin 0 auto

pre
	border 1px solid rgb(128, 128, 128)
	padding 1em
	width calc(100% - 2em)
	box-shadow 1px 1px 16px rgba(0, 0, 0, 0.6)
	color rgb(224, 224, 224)
	background-color rgb(32, 32, 32)
	border none
	border-radius 3px

pre, code
	font-family 'Ubuntu Mono', Consolas, monospace
	tab-size 4

ul
	list-style-type square

ol
	list-style-type decimal

ul, ol
	list-style-position outside
	padding 0
	margin-left 1.7em
	width calc(100% - 1.7em)

strong
	font-weight bold

em
	font-style italic

th
	font-size 120%
	padding 5px 0
	text-align left

hr
	clear both
	height 4px
	border-bottom 1px dotted #ccc
	border-left none
	border-right none
	border-top none

.no-shadow
	box-shadow none !important

span.glyphicon
	margin-right 0.4em

.dim
	opacity 0.4

::selection
	text-shadow none
	background rgba(255, 255, 255, 0.1)