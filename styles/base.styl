@require "styles/config.styl"

html
	height 100%

body
	font-family "Julius Sans One"
	tab-size 4
	-webkit-font-smoothing antialiased
	text-rendering optimizeLegibility
	height 100%
	color mainColor
	background-color rgb(32, 32, 32)
	overflow-x hidden
	overflow-y scroll
	background-image url("/images/backgrounds/self.jpg")
	background-repeat no-repeat
	background-position left 11%
	background-size cover
	background-attachment fixed
	transform-style preserve-3d

a
	text-decoration none
	color subColor
	transition all transitionSpeed ease

	&:hover
		color rgb(187, 238, 255)
		text-shadow 0px 0px 8px rgba(187, 238, 255, 0.3)

h2
	a
		&:hover
			text-decoration none

li
	margin-top 1px
	margin-bottom 1px

#content
	img
		border none
		box-shadow 0px 0px 8px rgba(0, 0, 0, 0.6)

h1
	display inline-block
	font-size 3em
	line-height 3em

h3
	font-size 2em
	line-height 1.5em
	font-weight bold
	width 100%
	letter-spacing 1px

h4
	line-height 1.5em
	font-size 1.5em
	font-weight bold
	text-align left

small
	font-size 70%

p, ul, ol, h4, blockquote
	line-height 1.7em
	float left
	width 100%

p, ul, ol, pre, h3, blockquote
	text-align left
	margin-top 0.4em
	margin-bottom 0.4em
	float left

table
	float left

td
	border-bottom-width 1px
	border-bottom-style solid
	padding 0.5em
	text-align left
	vertical-align top

iframe
	padding 0.5em
	float left
	display block
	margin 0 auto

pre
	border 1px solid rgb(128, 128, 128)
	padding 1em
	width calc(100% - 2em)
	box-shadow 1px 1px 16px rgba(0, 0, 0, 0.6)
	color rgb(224, 224, 224)
	background-color rgb(32, 32, 32)
	border none
	border-radius 3px

pre, code
	font-family 'Ubuntu Mono', Consolas, monospace
	tab-size 4

ul
	list-style-type square

ol
	list-style-type decimal

ul, ol
	list-style-position outside
	padding 0
	margin-left 1.7em
	width calc(100% - 1.7em)

strong
	font-weight bold

em
	font-style italic

th
	font-size 120%
	padding 5px 0
	text-align left

hr
	clear both
	height 4px
	border-bottom 1px dotted #ccc
	border-left none
	border-right none
	border-top none

::selection
	text-shadow none
	background rgba(255, 255, 255, 0.1)