.title
	display none

h2
	display none

#content > section,
#content > article
	font-family "Lato"
	float left
	width calc(100% - 3em)
	display block
	margin 0.5em auto
	padding 1.5em
	line-height 1.7em
	overflow hidden
	text-align center
	border-radius 5px
	box-shadow 0 0 8px rgba(0, 0, 0, 0.5)
	background rgba(48, 48, 48, 0.98)
	transition all 270ms ease

section
	header
		h3
			margin-top 0