contentBorder = 1px solid rgba(0, 0, 0, 0.2)

#content
	flex-grow 1
	display flex
	flex-flow row wrap

	img
		margin 0.5em auto
		max-width 100%
		height auto
		border none
		box-shadow 0 0 8px rgba(0, 0, 0, 0.5)
		transition box-shadow transitionSpeed ease

		&:hover
			box-shadow 0 0 14px rgba(0, 0, 0, 0.8)

.text
	color mainColor
	text-shadow textShadow

	&:hover
		color mainColor
		text-shadow textShadow

#content > section,
#content > article
	font-family textFont
	text-shadow textShadow
	width 100%
	max-width maxSectionSize
	margin 0.5em auto
	padding 1.5em
	line-height 1.7em
	overflow hidden
	text-align center