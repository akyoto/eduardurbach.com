contentBorder = 1px solid rgba(0, 0, 0, 0.2)

#content
	display flex
	flex-flow row wrap
	align-items flex-start
	justify-content center
	padding 3rem 1.5rem

	img
		margin 0.5em auto
		max-width 100%
		height auto
		border none
		box-shadow 0 0 8px rgba(0, 0, 0, 0.5)
		transition box-shadow transitionSpeed ease

		&:hover
			box-shadow 0 0 14px rgba(0, 0, 0, 0.8)

.text
	color mainColor
	text-shadow textShadow

	&:hover
		color mainColor
		text-shadow textShadow

#content > section,
#content > article
	display flex
	flex-flow row wrap
	width 100%
	max-width maxSectionSize
	font-family textFont
	text-shadow textShadow
	line-height 1.7em
	text-align center

#content > section
	margin 0.5em auto
	padding 1.5em 0