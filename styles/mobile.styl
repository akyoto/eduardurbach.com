@media only screen and (max-width: 740px)
	#content
		margin 0

	#content, #footer
		width calc(100% - 1em)
		margin 0 0.5em

@media only screen and (max-width: 800px)
	#header
		width calc(100% - 1em)

	#title, #tagline
		display none

	#loading-animation
		bottom auto
		top 1rem
		right 1rem

	.navigation-item
		margin-left 0

	.navigation-item-icon
		margin-right 0 !important

	.navigation-item-title
		display none