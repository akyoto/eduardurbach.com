@media only screen and (max-width: 1600px)
	#content
		width calc(60% - 1em)

@media only screen and (max-width: 1300px)
	#content
		width calc(75% - 1em)

@media only screen and (max-width: 800px)
	#header
		width calc(100% - 1em)

	#title, #tagline
		display none

	#content
		margin 0.5em auto

	#content, #footer
		width calc(100% - 1em)

@media only screen and (max-width: 800px)
	.footer-item
		color rgba(0, 0, 0, 0)
		width 0
		&:first-letter
			color rgba(255, 255, 255, 1)
			font-size 1.5rem

		&:hover
