@media only screen and (max-width: 1600px)
	#content, #footer
		width calc(60% - 1em)

@media only screen and (max-width: 1300px)
	#content, #footer
		width calc(75% - 1em)

@media only screen and (max-width: 800px)
	#header
		width calc(100% - 1em)

	#title, #tagline
		display none

	#content
		margin 0.5em auto

	#content, #footer
		width calc(100% - 1em)

	.media-box
		width 100%
		padding-bottom 56.25%
		margin-left 0
		margin-right 0
		opacity 1.0

	.soundcloud-track
		padding-bottom 100%