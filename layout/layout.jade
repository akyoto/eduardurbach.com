doctype html
html(lang="en")
	head
		title= siteName
		style!= css
		meta(name="viewport", content="width=device-width, initial-scale=1")
		each font in fonts
			link(rel="stylesheet", type="text/css", href="http://fonts.googleapis.com/css?family=" + font)
	
	body
		#container
			#header-container
				#header
					#title
						h1= siteName
					
					if nav
						nav#navigation
							header
								h2 Navigation
							
							each link in nav
								a.navigation-link.ajax(href="/#{link.url}")
									.navigation-button.sliding-middle-out= link.title
			
			#content-container
				section#content!= content
			
			#loading-animation.spinner
				.cube1
				.cube2
		
		script!= js