header
	h2(style="display: block") Education

each edu, name in education
	section
		h3.education-institution= name
		
		table
			tbody
				tr.education-row
					td.education-label
						span.glyphicon.glyphicon-map-marker.label-icon
						span.label-text Location
					td.education-location
						a.education-location-link(href='https://www.google.com/maps/place/' + edu.city + ',+' + edu.country, target='_blank')= edu.city
						span.education-country= ' / ' + edu.country
				
				tr.education-row
					td.education-label
						span.glyphicon.glyphicon-star.label-icon
						span.label-text Type
					td.education-type= edu.type
				
				if edu.degree
					tr.education-row
						td.education-label
							span.glyphicon.glyphicon-certificate.label-icon
							span.label-text Degree
						td.degree= edu.degree
					
				tr.education-row
					td.education-label
						span.glyphicon.glyphicon-time.label-icon
						span.label-text Year
					td.education-year= edu.fromYear + " - " + edu.toYear
				
				tr.education-row
					td.education-label
						span.glyphicon.glyphicon-check.label-icon
						span.label-text Status
					td.degree-status= edu.status
					
				if edu.notes
					tr.education-row
						td.education-label
							span.glyphicon.glyphicon-tag.label-icon
							span.label-text Notes
						td.education-notes= edu.notes