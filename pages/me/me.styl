.profile
	width 100%
	margin-top 1em
	font-size 1.4em
	text-align center
	letter-spacing 3px

.profile-image
	border-radius 100%
	margin 0 auto
	display block
	width 300px
	height 300px

.name
	display block
	margin-top 1.6em
	font-weight bold
	text-shadow 0px 0px 8px rgba(255, 255, 255, 0.1)

.job-title
	display block
	margin-top 1em
	font-size 0.5em
	opacity 0.8
	text-shadow 0px 0px 8px rgba(255, 255, 255, 0.5)