#content-container
	display flex
	flex-flow column

#content
	flex-grow 1
	align-items center
	height 100%

.profile
	display flex
	flex-flow column
	font-size 1.9rem
	line-height 1.4em
	text-align center
	letter-spacing 3px
	width 100%
	align-items center
	justify-content center
	//transform translateY(navigationHeight * -1)

.profile-image
	filter saturate(0%) contrast(170%)
	border-radius 100%
	margin 0 auto
	display block
	width 300px
	height 300px
	transition all 600ms ease
	&:hover
		box-shadow 0 0 50px rgba(255, 255, 255, 0.4) !important

.name
	color headerColor
	display block
	font-weight bold
	text-shadow 0px 0px 6px rgba(0, 0, 0, 0.5)

.job-title
	color headerColor
	display block
	margin-top 0.1em
	font-size 0.5em
	opacity 0.8
	text-shadow 0px 0px 8px rgba(255, 255, 255, 0.4)