.profile
	width 100%
	color rgb(224, 224, 224)
	font-size 1.9em
	text-align center
	letter-spacing 3px
	margin-top 23%
	transition all 1000ms ease

	a:hover
		transform scale(1.04)
		&:after
			width 0 !important

.profile-image
	border-radius 100%
	margin 0 auto
	display block
	width 300px
	height 300px

.name
	display block
	margin-top 1.6em
	font-weight bold
	text-shadow 0px 0px 6px rgba(0, 0, 0, 0.5)

.job-title
	display block
	margin-top 1em
	font-size 0.5em
	opacity 0.8
	text-shadow 0px 0px 8px rgba(255, 255, 255, 0.5)

@media only screen and (max-height: 800px)
	.profile
		margin-top 13%

@media only screen and (max-height: 700px)
	.profile
		margin-top 6%

@media only screen and (max-height: 600px)
	.profile
		margin-top 0%

	.name
		margin-top 1em

