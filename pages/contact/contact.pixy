component Contact
	h1.mountable Contact

	.contact-links
		ContactLink("Facebook", "http://www.facebook.com/eduard.urbach", "facebook")
		ContactLink("Twitter", "https://twitter.com/eduardurbach", "twitter")
		ContactLink("Google+", "https://google.com/+EduardUrbach", "google-plus")
		ContactLink("GitHub", "https://github.com/blitzprog", "github")
		ContactLink("SoundCloud", "http://soundcloud.com/eduard-urbach", "music")
		ContactLink("Sketchfab", "https://sketchfab.com/EduardUrbach", "cube")
		ContactLink("E-Mail", "mailto:e.urbach@gmail.com", "envelope")

component ContactLink(title string, url string, icon string)
	.contact-link-container
		a.contact-link.mountable(href=url, target="_blank")
			svg-icon(name=icon)
			.contact-link-name= title