.websites
	list-style-type none

.website-title
	float left
	width 100%
	text-align center

.website-date
	float left
	width 100%
	text-align center
	opacity 0.5
	transition opacity 200ms ease

.website-image
	border-radius 3px

.website-link
	opacity 0.7

	&:hover
		opacity 1.0

	&:after
		width 0 !important

@media only screen and (max-width: 480px)
	.website-date
		display none